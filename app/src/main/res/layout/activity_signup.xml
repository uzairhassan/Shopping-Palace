<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    >


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#D3D3D3"
        android:orientation="vertical"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        tools:context=".SignUp"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="50dp"
            android:paddingRight="40dp">

            <Space
                android:layout_width="1dp"
                android:layout_height="25dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/user1" />
                <com.alimuzaffar.lib.widgets.AnimatedEditText
                    android:id="@+id/signup_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Name"
                    android:inputType="textNoSuggestions"
                    android:textColor='#000000'
                    android:textColorHint="#000000"
                    app:animationType="fromRight"
                    app:animateCursor="true"
                    app:animateTextClear="true" />
                <!--<EditText
                    android:id="@+id/signup_name"
                    android:textColor="#000000"
                    android:textColorHint="#000000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:hint="Name" />-->
            </LinearLayout>

            <Space
                android:layout_width="1dp"
                android:layout_height="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/email" />
                <com.alimuzaffar.lib.widgets.AnimatedEditText
                    android:id="@+id/signup_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email"
                    android:inputType="textNoSuggestions"
                    android:textColor='#000000'
                    android:textColorHint="#000000"
                    app:animationType="fromRight"
                    app:animateCursor="true"
                    app:animateTextClear="true" />
                <!--<EditText
                    android:id="@+id/signup_email"
                    android:textColor="#000000"
                    android:textColorHint="#000000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email" />-->
            </LinearLayout>

            <Space
                android:layout_width="1dp"
                android:layout_height="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/password" />
                <com.marlonmafra.android.widget.EditTextPassword
                    android:id="@+id/signup_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:textColor='#000000'
                    android:textColorHint="#000000"
                    app:iconPosition="right"
                    app:hidePasswordIcon="@drawable/ic_hide_password"
                    app:showPasswordIcon="@drawable/ic_show_password"
                    app:fontPath="fonts/roboto_regular.ttf" />
                <!--<EditText
                    android:id="@+id/signup_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Password"
                    android:inputType="textPassword" />-->
            </LinearLayout>

            <Space
                android:layout_width="1dp"
                android:layout_height="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/password" />
                <com.marlonmafra.android.widget.EditTextPassword
                    android:id="@+id/signup_confirm_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Confirm Password"
                    android:inputType="textPassword"
                    android:textColor='#000000'
                    android:textColorHint="#000000"
                    app:iconPosition="right"
                    app:hidePasswordIcon="@drawable/ic_hide_password"
                    app:showPasswordIcon="@drawable/ic_show_password"
                    app:fontPath="fonts/roboto_regular.ttf" />
                <!--<EditText
                    android:id="@+id/signup_confirm_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Confirm Password"
                    android:inputType="textPassword" />-->
            </LinearLayout>

            <Space
                android:layout_width="1dp"
                android:layout_height="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/contact" />
                <com.alimuzaffar.lib.widgets.AnimatedEditText
                    android:id="@+id/signup_contact_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Contact Number"
                    android:inputType="textNoSuggestions"
                    android:textColor='#000000'
                    android:textColorHint="#000000"
                    app:animationType="fromRight"
                    app:animateCursor="true"
                    app:animateTextClear="true" />
                <!--<EditText
                    android:id="@+id/signup_contact_number"
                    android:textColor="#000000"
                    android:textColorHint="#000000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Contact Number"
                    android:inputType="number" />-->
            </LinearLayout>

            <Space
                android:layout_width="1dp"
                android:layout_height="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/address" />
                <com.alimuzaffar.lib.widgets.AnimatedEditText
                    android:id="@+id/signup_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Address"
                    android:inputType="textNoSuggestions"
                    android:textColor='#000000'
                    android:textColorHint="#000000"
                    app:animationType="fromRight"
                    app:animateCursor="true"
                    app:animateTextClear="true" />
                <!--<EditText
                    android:id="@+id/signup_address"
                    android:textColor="#000000"
                    android:textColorHint="#000000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Address" />-->
            </LinearLayout>

            <Space
                android:layout_width="1dp"
                android:layout_height="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/credit_card" />
                <com.alimuzaffar.lib.widgets.AnimatedEditText
                    android:id="@+id/signup_credit_card_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Credit Card Number"
                    android:inputType="textNoSuggestions"
                    android:textColor='#000000'
                    android:textColorHint="#000000"
                    app:animationType="fromRight"
                    app:animateCursor="true"
                    app:animateTextClear="true" />
                <!--<EditText
                    android:id="@+id/signup_credit_card_number"
                    android:textColor="#000000"
                    android:textColorHint="#000000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Credir Card Number"
                    android:inputType="number" />-->
            </LinearLayout>

            <Space
                android:layout_width="1dp"
                android:layout_height="10dp" />

            <Spinner
                android:id="@+id/signup_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/btn_dropdown"
                android:spinnerMode="dropdown" />

            <Space
                android:layout_width="1dp"
                android:layout_height="20dp" />
            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/signup_signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                fancy:fb_borderColor="#FFFFFF"
                fancy:fb_borderWidth="1dp"
                fancy:fb_defaultColor="#7ab800"
                fancy:fb_focusColor="#9bd823"
                fancy:fb_radius="30dp"
                fancy:fb_text="Sign Up"
                fancy:fb_textColor="#FFFFFF" />
            <!--<Button
                android:id="@+id/signup_signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFA500"
                android:onClick="button"
                android:text="Sign Up" />-->
        </LinearLayout>


        <Space
            android:layout_width="1dp"
            android:layout_height="30dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="25sp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/elogin"
                android:layout_width="wrap_content"
                android:layout_height="25sp"
                android:textSize="17sp"
                android:textColor="#000000"
                android:text="Already a member? Login" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>